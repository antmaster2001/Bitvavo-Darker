{
    "name": "Bitvavo Darker",
    "description": "Turns the bitvavo main dashboard into a nice dark theme.",
    "version": "2.1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "./img/shield.png",
        "48": "./img/shield.png",
        "128": "./img/shield.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://account.bitvavo.com/*"
            ],
            "css": [
                "./src/styles/style.css"
            ],
            "exclude_matches": [
                "https://account.bitvavo.com/markets/*"
            ]
        },
        {
            "matches": [
                "https://account.bitvavo.com/*"
            ],
            "js": [
                "./src/content.js"
            ],
            "run_at": "document_end"
        }
    ]
}